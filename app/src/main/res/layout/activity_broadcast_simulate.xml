<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.login.test.broadcast.BroadSimulateActivity"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glv_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
        <Button
            android:id="@+id/btn_registerBroadCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/glh_1"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="注册并接收广播"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_getPhoneSignalStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/glv_50"
            app:layout_constraintTop_toBottomOf="@+id/btn_registerBroadCast"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:text="获取电话信号强度"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_getPhoneBatteryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/glv_50"
            app:layout_constraintTop_toBottomOf="@+id/btn_getPhoneSignalStrength"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:text="获取电量"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_getPhoneTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/glv_50"
            app:layout_constraintTop_toBottomOf="@+id/btn_getPhoneBatteryLevel"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:text="获取手机时间"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

        <Button
            android:id="@+id/btn_signalStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_registerBroadCast"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟电话信号强度改变"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

        <Button
            android:id="@+id/btn_batteryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_signalStrength"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟电量改变"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_batteryLevel"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟当前时间发生改变"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_screenOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_time"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟屏幕解锁"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_ScreenOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_screenOn"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟锁屏"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_mediaMounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_ScreenOff"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟媒体介质被挂载"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_USBMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_mediaMounted"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟设备进入USB模式"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_UserDial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_USBMode"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟用户打电话"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_UserCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/glv_50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_UserDial"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="模拟用户拨号"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>