<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.login.test.TestActivity">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glh_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />
        <Button
            android:id="@+id/btn_reqPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/glh_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="申请读写权限"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_apkinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_reqPermission"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:text="获取ApkInfo"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_run_sdksScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_apkinfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="启动 sdksScanActivity"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_mock_system_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_run_sdksScan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:text="启动 模拟系统广播"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        <Button
            android:id="@+id/btn_logsUtils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_mock_system_broadcast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:background="@color/blue"
            android:text="日志测试"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>